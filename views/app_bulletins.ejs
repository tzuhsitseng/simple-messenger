    <![endif]-->

    <script src="/javascripts/jquery-1.11.3.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/views/app_bulletins.js">

    </script>
</head>
<body>
    <%- include header.ejs %>
    
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-xs-6 text-left">
                <form class="form-horizontal" method="post">
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">
                        標題
                        </label>
                        <div class="col-sm-10">
                            <input name="data[title]" type="text" class="form-control" id="title"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="content" class="col-sm-2 control-label">內容</label>
                        <div class="col-sm-10">
                            <textarea name="data[content]" class="form-control" id="content" rows="10" style="display:block; margin-bottom:10px;"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="department" class="col-sm-2 control-label">發佈給</label>
                        <div class="col-sm-10">
                        <select id="department" name="data[department]" multiple class="form-control">
                        </select>
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="level" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input value="送出" type="button" id="btn_send" class="btn btn-primary" />
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
